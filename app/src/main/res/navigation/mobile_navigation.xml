<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_current_weather">

    <fragment
        android:id="@+id/nav_current_weather"
        android:name="com.example.dvtweatherapp.ui.home.HomeFragment"
        android:label="Current Weather"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_favourites"
        android:name="com.example.dvtweatherapp.ui.gallery.FavouritesFragment"
        android:label="Favourites"
        tools:layout="@layout/fragment_favourites" />

    <fragment
        android:id="@+id/nav_offline_mode"
        android:name="com.example.dvtweatherapp.ui.slideshow.SlideshowFragment"
        android:label="Offline Mode"
        tools:layout="@layout/fragment_slideshow" />

    <fragment
        android:id="@+id/nav_maps"
        android:name="com.example.dvtweatherapp.ui.MapsFragment"
        android:label="View Maps"
        tools:layout="@layout/fragment_maps" />
</navigation>